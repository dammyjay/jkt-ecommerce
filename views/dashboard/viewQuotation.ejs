<div class="container">
  <h1>Project Quotation</h1>

  <div class="card">
    <h3><%= quotation.title %></h3>
    <p><%= quotation.description %></p>

    <p><strong>Quoted Amount:</strong> â‚¦<%= quotation.quoted_amount %></p>
    <p><strong>Delivery Timeline:</strong> <%= quotation.delivery_timeline %></p>

    <% if (quotation.quotation_file) { %>
      <a 
        href="<%= quotation.quotation_file %>" 
        target="_blank" 
        class="btn btn-outline-primary"
      >
        View / Download PDF
      </a>
      <!-- <a 
        href="<%= quotation.quotation_file %>?download=quotation_<%= bookingId %>.pdf"
        class="btn btn-outline-primary"
        >
        Download Quotation (PDF)
        </a> -->

    <% } %>

    <% if (quotation.status === 'quoted') { %>
      <form 
        action="/projects/quotation/accept/<%= bookingId %>" 
        method="POST"
        style="margin-top:15px;"
      >
        <button class="btn btn-success">
          Accept Quotation
        </button>
      </form>
    <% } %>
  </div>
</div>
