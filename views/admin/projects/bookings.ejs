<h1>Project Bookings</h1>

<table>
  <tr>
    <th>User</th>
    <th>Project</th>
    <th>Status</th>
    <th>Action</th>
  </tr>

  <% bookings.forEach(b => { %>
    <tr>
      <td><%= b.fullname %></td>
      <td><%= b.title %></td>
      <td><%= b.status %></td>
      <td>
        <form action="/admin/projects/quotation" method="POST" enctype="multipart/form-data">
          <input type="hidden" name="booking_id" value="<%= b.id %>" />
          <input type="number" name="quoted_amount" placeholder="Amount" required />
          <input type="text" name="delivery_timeline" placeholder="Timeline" required />
          <input type="file" name="quotation" required />
          <button>Send Quotation</button>
        </form>
      </td>
    </tr>
  <% }) %>
</table>
